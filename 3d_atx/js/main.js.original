    function zoomOut() {
        gsap.to(camera, {
            zoom: Math.max(CONFIG.camera.minZoom, camera.zoom - CONFIG.camera.zoomIncrement),
            duration: CONFIG.animationSpeeds.uiFade,
            onUpdate: () => camera.updateProjectionMatrix()
        });
